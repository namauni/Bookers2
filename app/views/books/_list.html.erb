<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>
name:<%= user.name %>
introduction: <%= user.introduction %>
<li>
<%= link_to 'ユーザー編集', edit_user_path(user.id) %>
</li>

<h2>New book</h2>

  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
