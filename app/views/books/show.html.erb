<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    
<%= render 'list', user: @user, book: @list %>

<div class="col-md-8 offset-md-1">
  
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <tbody>
   <tr>
   <td><%= link_to user_path(@book.user.id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <p><%= @book.user.name %><p>
    <% end %></td>
    
    <td><%= link_to  do %>
    <%= @book.title %>
    <% end %></td>
  
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_82907" %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy_book_36606" %></td>
  <% end %>
  </tr>
  </tbody>
  </table>
  </div>
  </div>
  </div>